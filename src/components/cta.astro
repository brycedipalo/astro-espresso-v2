---
export interface CtaProps {
  heading: string;
  subheading: string;
  buttonText: string;
  buttonHref: string;
}

const { heading, subheading, buttonText, buttonHref } = Astro.props;
---

<section id="contact" class="py-20 bg-gray-900 text-white text-center">
  <div class="max-w-3xl mx-auto px-4">
    <h2 class="text-3xl sm:text-4xl font-bold">{heading}</h2>
    <p class="mt-4 text-lg text-gray-300">{subheading}</p>
    <a
      href={buttonHref}
      class="mt-8 inline-block bg-white text-gray-900 font-semibold px-8 py-4 rounded-lg shadow hover:bg-gray-200 transition"
    >
      {buttonText}
    </a>
  </div>
</section>
