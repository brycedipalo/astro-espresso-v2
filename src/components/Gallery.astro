---
interface GalleryItem {
  src: string;
  alt: string;
}

export interface GalleryProps {
  gallery: GalleryItem[];
}

const { gallery } = Astro.props;
---

<section class="py-20 bg-white">
  <div class="max-w-6xl mx-auto px-4 text-center">
    <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-12">Gallery</h2>

    <div class="columns-2 md:columns-3 lg:columns-4 gap-4 space-y-4">
      {gallery.map((item, i) => (
        <img
          key={i}
          src={item.src}
          alt={item.alt}
          class="w-full mb-4 rounded-lg shadow object-cover break-inside-avoid"
          loading="lazy"
        />
      ))}
    </div>
  </div>
</section>
