---
import { photographerSite } from "../content/examples/photographer";
import Layout from "../layouts/BaseLayout.astro";
import Hero from "../components/Hero.astro";
import About from "../components/About.astro";
import Services from "../components/Services.astro";
import Portfolio from "../components/Portfolio.astro";
import Testimonials from "../components/Testimonials.astro";
import Cta from "../components/cta.astro";
import Gallery from "../components/Gallery.astro";
---

<Layout title="Photographer | Premium Template">
  <Hero {...photographerSite.hero} />
  <Services 
    heading={photographerSite.services.heading}
    subheading={photographerSite.services.subheading}
    services={photographerSite.services.items}
  />
  <Portfolio />
  <Testimonials 
    heading={photographerSite.testimonials.heading}
    subheading={photographerSite.testimonials.subheading}
    testimonials={photographerSite.testimonials.items}
  />
  <About {...photographerSite.about} />
  <Cta
    heading={photographerSite.cta.heading}
    subheading={photographerSite.cta.subheading}
    buttonText={photographerSite.cta.buttonText}
    buttonHref={photographerSite.cta.buttonHref}
  />
<Gallery gallery={photographerSite.gallery} />
</Layout>
